/***************************
GLOBAL ELEMENTS
****************************/
a {
  color: black;
}
body {
  background-color:#81A5D6;
  background-image: url('<%= asset_path("trinity_background.jpg") %>');
  background-repeat: no-repeat;
}
.container {
  background-color: white;
  margin-top: 10px;
  opacity: .9;
  padding-top: 5px;
}
/***************************
APPLICATION.HTML.ERB
****************************/
#cross-and-flame {
  height: 95px;
}
#footer {
  border-top-color: grey;
  border-top-style: solid;
  border-top-width: thin;
  flex: auto;
  min-width: 100%;
  padding: 5px;
}
#footer div {
  padding: 10px;
}
#footer div p {
  line-height: 11px;
}
#navbar {
  background-color: lightblue;
  border-radius: 0px;
  height: 100px;
}
#navbar-options-menu {
  padding-top: 39px;
}
#navbar-options-menu li {
  font-size: 18px;
}
#viewport-container {
  flex: auto;
  min-height: 600px;
  min-width: 100%;
  padding-bottom: 40px;
}
/***************************
_HOME.HTML
****************************/
.event-overview {
  padding: 5px 0;
}
.events-overview-container {
  border-left-style: groove;
  min-height: 500px;
  padding: 15px 0 0 30px;
}
.post-body {
  width: 100%;
}
.post-overview {
  padding: 5px 0 5px 10px;
}
.posts-overview-container {
  padding: 15px 0;
  min-height: 500px;
}
.post-overview-header {
  padding: 0 0 0 10px;
}

/***************************
_STAFF.HTML
****************************/
.staff-div {
  flex:auto;
  align-items: center;
  padding: 20px;
}
.staff-image-container {
  top: 15px;
}
.staff-image img {
  border-radius: 50%;
  border-style:none;
  height:170px;
  width: 155px;
}
/***************************
_POSTS_HOME.HTML
****************************/
.create-post-button {
  padding-top: 50px;
}
.message {
  padding: 15px 0;
}

/***************************
_ABOUT.HTML
****************************/
.history-container {
  flex: auto;
  width: 100%;
}
.about-container-header {
  padding-bottom: 10px;
}
.about-content {
  padding: 0 5px;
  border-left-style: groove;
  border-width: thin;
}
.about-content p {
  font-size: 16px;
}
.about-picture img {
  height: 200px;
  width: 200px;
}
.about-picture p {
  font-size: 11px;
}





























